<h1>Carts#show</h1>

<%#= @cart_items %>

<%# debugger %>
<% if @cart_items.blank? %>
  <h2>カートは空っぽです</h2>
<% else %>
  <% @cart_items.each do |cart_item| %>
    <tr class="cart_item">
      <td><%= cart_item.product.name %></td>
      <td><%= cart_item.product.price %></td>
      <td><%= cart_item.quantity %></td>
      <td><%#= button_tag "delete", cart_item, :method => :delete %></td>
      <td><%= button_to '削除', cart_item, method: :delete, data: {confirm: 'カートから削除してよろしいですか？'}%><td>
      <td><%#= button_to 'ログアウト', cart_item, delete_item_path, method: :delete %></td>
      <td><%#= link_to "削除する", cart_item, method: :delete,data: { confirm: "削除してよろしいですか？" } %><td>
      <td><%#= button_tag '削除', class: 'btn btn-danger delete' %></td>
    </tr>
  <% end %>
<% end %>

<h2>合計金額:<%= @total_price %>円</h2>

<%= button_to '注文をする', new_order_path, method: :get, class: 'fbtn' %>
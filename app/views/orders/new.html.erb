<h1>注文情報の入力</h1>

<div class="order_form">
	
		<%= form_for(@order) do |f| %>
      <div class="field">
        <%= f.label :氏名 %>
        <%= f.text_field :name, size: 40 %>
      </div>
      <div class="field">
        <%= f.label :住所 %>
        <%= f.text_area :address, rows: 3, cols: 40 %>
      </div>
      <div class="field">
        <%= f.label :メールアドレス %>
        <%= f.email_field :email, size: 40 %>
      </div>
  
    <%= f.submit "注文を確定する", class: 'btn-square-shadow' %>
  
</div>
<% end %>

<%= link_to '買い物を続ける',root_path, class: 'btn' %>